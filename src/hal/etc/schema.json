{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "available_scripts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "running_scripts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "script_step": {
      "type": "array",
      "items": [
        { "type": "string" },
        { "type": "string" },
        { "type": "number" },
        { "type": "number" }
      ],
      "minItems": 4,
      "maxItems": 4
    },
    "macros": {
      "type": "array",
      "items": { "type": "string" }
    },
    "running_macros": {
      "type": "array",
      "items": { "type": "string" }
    },
    "stages": {
      "type": "array",
      "items": { "type": "string" },
      "minLength": 2
    },
    "all_stages": {
      "type": "array",
      "items": { "type": "string" },
      "minLength": 2
    },
    "stage_status": {
      "type": "array",
      "items": { "type": "string" }
    },
    "additionalProperties": false
  }
}
