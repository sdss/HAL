{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "available_scripts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "running_scripts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "script_step": {
      "type": "array",
      "items": [
        { "type": "string" },
        { "type": "string" },
        { "type": "number" },
        { "type": "number" }
      ],
      "minItems": 4,
      "maxItems": 4
    },
    "macros": {
      "type": "array",
      "items": { "type": "string" }
    },
    "running_macros": {
      "type": "array",
      "items": { "type": "string" }
    },
    "stages": {
      "type": "array",
      "items": { "type": "string" },
      "minLength": 2
    },
    "all_stages": {
      "type": "array",
      "items": { "type": "string" },
      "minLength": 2
    },
    "stage_status": {
      "type": "array",
      "items": { "type": "string" }
    },
    "stage_duration": {
      "type": "array",
      "items": [
        { "type": "string" },
        { "type": "string" },
        { "type": "number" }
      ]
    },
    "bypasses": {
      "type": "array",
      "items": { "type": "string" }
    },
    "exposure_state_apogee": {
      "type": "array",
      "items": [
        { "title": "current_apogee", "type": "integer" },
        { "title": "n_apogee", "type": "integer" },
        { "title": "pair", "type": "boolean" },
        { "title": "apogee_dither", "type": "string" },
        { "title": "etr_apogee", "type": "number" },
        { "title": "total_time_apogee", "type": "number" },
        { "title": "timestamp", "type": "number" }
      ]
    },
    "exposure_state_boss": {
      "type": "array",
      "items": [
        { "title": "current_boss", "type": "integer" },
        { "title": "n_boss", "type": "integer" },
        { "title": "etr_boss", "type": "number" },
        { "title": "total_time_boss", "type": "number" },
        { "title": "timestamp", "type": "number" }
      ]
    },
    "expose_is_paused": { "type": "boolean" },
    "auto_mode_message": { "type": "string" },
    "additionalProperties": false
  }
}
